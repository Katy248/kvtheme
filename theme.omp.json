{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "newline": true,
      "alignment": "left",
      "overflow": "hide",
      "segments": [
        {
          "template": "{{ .UserName }}@{{ .HostName }}",
          "style": "plain",
          "type": "session",
          "foreground": "white"
        },
        {
          "type": "path",
          "foreground": "#FF97BB",
          "properties": {
            "style": "full"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "newline": false,
      "segments": [
        {
          "type": "time",
          "foreground": "#FF97BB",
          "template": "({{ .CurrentDate | date .Format }}) ",
          "properties": {
            "time_format": "15:04"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "newline": true,
      "alignment": "left",
      "segments": [
        {
          "style": "plain",
          "foreground": "#FF97BB",
          "type": "text",
          "template": "-->"
        }
      ]
    }
  ],
  "final_space": true,
  "version": 2
}
